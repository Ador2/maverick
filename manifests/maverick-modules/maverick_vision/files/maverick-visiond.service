[Unit]
Description=Maverick Vision Daemon
After=network-online.target
Requires=network-online.target
StartLimitBurst=3

[Service]
TimeoutStartSec=0
ExecStart=/srv/maverick/software/visiond/visiond -c /srv/maverick/config/vision/visiond.conf
User=mav
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target

